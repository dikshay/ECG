<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/myLayout">

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#F0F0F0"
        android:padding="3dp"
        android:layout_gravity="center">

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Patient ID"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Age"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Patient Name"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="Sex"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">
                <EditText
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:background="#FFFFFF"
                    android:layout_margin="5dp"
                    android:id="@+id/patient_id"/>
                <EditText
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:background="#FFFFFF"
                    android:layout_margin="5dp"
                    android:id="@+id/age"/>
                <EditText
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:background="#FFFFFF"
                    android:layout_margin="5dp"
                    android:id="@+id/name"/>
                <RadioGroup android:id="@+id/sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="male"/>
                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="female"/>
                </RadioGroup>

            </TableRow>

        </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/create_table"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Create Table"
            android:textColor="@color/colorText"
            style="@style/element_spacing"
            android:textSize="10sp"
            android:background="#7DCD70"/>

        <Button android:id="@+id/run"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Run"
            android:textColor="@color/colorText"
            style="@style/element_spacing"
            android:background="#7DCD70"/>

        <Button android:id="@+id/stop"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Stop"
            android:textColor="@color/colorText"
            style="@style/element_spacing"
            android:background="#F36130"/>

        <Button android:id="@+id/upload"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Upload"
            android:textColor="@color/colorText"
            style="@style/element_spacing"
            android:background="#7DCD70" />

        <Button android:id="@+id/download"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Download"
            android:textColor="@color/colorText"
            style="@style/element_spacing"
            android:background="#7DCD70" />
    </LinearLayout>

</LinearLayout>

